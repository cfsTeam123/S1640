@model S1640.Models.UserMaster
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Login Page</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        /*body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;*/
        /*background: linear-gradient(135deg, #6A82FB, #FC5C7D);*/
        /*background: linear-gradient(135deg, #1A2A6C, #B21F1F);*/
        /*background: linear-gradient(135deg, #0B3D91, #A8DADC);
            <img src="~/Content/img/BarCode.png" alt="Logo">*/
        /*background: linear-gradient(135deg, #FF7E5F, #FEB47B);*/ /* Vibrant and energetic */
        /*background: linear-gradient(135deg, #3E5151, #DECBA7);*/
        /*margin: 0;
        }*/
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            background: linear-gradient(135deg, rgba(11, 61, 145, 0.6), rgba(168, 218, 220, 0.6)), url('/Content/img/Barcode2.png');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
        }

        .container {
            display: flex;
            width: 80%;
            max-width: 900px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 15px;
            backdrop-filter: blur(12px);
            padding: 40px;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        }

        .left-section {
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
        }

            .left-section img {
                width: 250px;
            }

        .right-section {
            flex: 1;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        .login-box {
            width: 100%;
            max-width: 400px; /* Adjust max-width */
            background: rgba(255, 255, 255, 0.1); /* Base background */
            padding: 30px;
            border-radius: 20px;
            box-shadow: 0 6px 18px rgba(0, 0, 0, 0.1); /* Soft shadow */
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            color: #fff;
            position: relative;
            overflow: hidden; /* Ensures light effect stays within bounds */
        }



            .login-box::before {
                content: "";
                position: absolute;
                top: 0;
                left: -100%;
                width: 100%;
                height: 100%;
                background: linear-gradient(120deg, rgba(255, 255, 255, 0.3), rgba(255, 255, 255, 0.8), rgba(255, 255, 255, 0.3)); /* Light gradient */
                animation: light-effect 2s ease-in-out infinite; /* Speed and type of animation */
                pointer-events: none; /* Makes sure it doesn't interfere with content interaction */
            }

        /* Adjust for smaller screens */
        @@media (max-width: 480px) {
            .login-box {
                padding: 20px;
                max-width: 100%;
            }
        }

        .input-group-text {
            background: rgba(255, 255, 255, 0.2);
            border: none;
        }

        .form-control {
            background: rgba(255, 255, 255, 0.2);
            border: none;
            color: white;
        }

            .form-control::placeholder {
                color: rgba(255, 255, 255, 0.7);
            }

        .btn-primary {
            background: #00c6ff;
            border: none;
            padding: 10px;
            font-size: 18px;
            font-weight: bold;
            border-radius: 8px;
        }

            .btn-primary:hover {
                background: #0072ff;
            }

        a {
            color: black;
            text-decoration: none;
        }

            a:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="left-section">
            <img src="~/Content/img/C_logo1.png" alt="Logo">

        </div>
        <div class="right-section">
            <div class="login-box text-center">
                <h3 class="mb-4 text-white">Login</h3>
                <form method="post" action="/Home/LoginCheck">
                    @if (TempData["wrongLogin"] != null)
                    {
                        <div class="alert alert-danger text-center">
                            @TempData["wrongLogin"]
                        </div>
                    }
                    <!-- Username field with label -->
                    <div class="mb-3">
                        <label for="UserId" class="form-label text-white">User ID</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-user text-white"></i></span>
                            <input type="text" name="UserId" id="UserId" class="form-control" placeholder="Enter Username" required>
                        </div>
                    </div>

                    <!-- Password field with label -->
                    <div class="mb-3">
                        <label for="passwordField" class="form-label text-white">Password</label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-lock text-white"></i></span>
                            <input type="password" id="passwordField" name="PW" class="form-control" placeholder="Enter Password" required>
                            <span class="input-group-text" id="togglePassword" style="cursor: pointer;">
                                <i class="fas fa-eye-slash" style="color: blue;"></i> <!-- Change color to blue or black -->
                            </span>
                        </div>
                    </div>
                    <!--<!-- Remember Me & Forgot Password Links -->
                    <!--<div class="d-flex justify-content-between mb-3">
                        <div>
                            <input type="checkbox" id="rememberMe">
                            <label for="rememberMe" class="text-white">Remember me</label>
                        </div>
                        <a href="/Home/Forgot" class="text-white">Forgot Password?</a>
                    </div>-->
                    <!-- Submit button -->
                    <button type="submit" class="btn btn-primary w-50">Login</button>

                </form>
            </div>
        </div>

    </div>
    <script>
        document.getElementById("togglePassword").addEventListener("click", function () {
            const passwordField = document.getElementById("passwordField");
            const icon = this.querySelector("i");

            // Toggle password visibility
            if (passwordField.type === "password") {
                passwordField.type = "text"; // Show password
                icon.classList.replace("fa-eye-slash", "fa-eye"); // Change icon to eye
                icon.style.color = "blue"; // Set icon color to blue when password is visible
            } else {
                passwordField.type = "password"; // Hide password
                icon.classList.replace("fa-eye", "fa-eye-slash"); // Change icon to eye-slash
                icon.style.color = "black"; // Set icon color to black when password is hidden
            }
        });
    </script>
    <script>
        setTimeout(function () {
            $('.alert').fadeOut('slow');
        }, 1000);
    </script>

</body>
</html>
